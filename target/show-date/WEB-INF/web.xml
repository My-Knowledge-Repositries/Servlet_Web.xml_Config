<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>my-first-servlet</servlet-name>
    <servlet-class>com.devstack.app.ShowDateServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>my-first-servlet</servlet-name>
    <url-pattern>/show-date</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>my-first-servlet</servlet-name>
    <url-pattern>/show-date/simple</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>my-first-servlet</servlet-name>
    <url-pattern>/show-date/test</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>my-first-servlet</servlet-name>
    <url-pattern>/show-date/simple/task</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>my-first-servlet</servlet-name>
    <url-pattern>/show-date/done</url-pattern>
  </servlet-mapping>
</web-app>
